# Syslinux Config

DEFAULT Arch_64
PROMPT 0
TIMEOUT 30
MENU RESOLUTION 1920 1080

UI vesamenu.c32

MENU TITLE ArchMainframe Boot Menu
MENU BACKGROUND wallpaper.png

MENU COLOR screen       40   	#ffffffff #00ffffff none
MENU COLOR border       40   	#00000000 #00000000 none
MENU COLOR title	      40   	#ff72d0ff #00000000 std
MENU COLOR unsel	      40  	#27ffffff #00000000 none
MENU COLOR sel		      40   	#ffffffff #80000000 none
#MENU COLOR hotkey	    40   	#00000000 #00000000 std
#MENU COLOR hotsel	    40   	#00000000 #00000000 all
MENU COLOR disabled	    40   	#ff383838 #00000000 all
MENU COLOR scrollbar	  40   	#00000000 #00000000 none
MENU COLOR tabmsg	      40   	#ff72d0ff #00000000 std
#MENU COLOR cmdmark	    40   	#00000000 #00000000 std
#MENU COLOR cmdline	    40   	#00000000 #00000000 std
#MENU COLOR pwdborder	  40   	#00000000 #00000000 std
#MENU COLOR pwdheader	  40   	#00000000 #00000000 std
#MENU COLOR pwdentry	  40   	#00000000 #00000000 std
MENU COLOR timeout_msg	40   	#ffe53d3d #00000000 std
MENU COLOR timeout	    40   	#ffff0000 #00000000 std
#MENU COLOR help 	      40   	#00000000 #00000000 std
#MENU COLOR msg07	      40   	#00000000 #00000000 std

LABEL Arch_64
    MENU LABEL Arch_64
    LINUX ../vmlinuz-linux
    APPEND root=UUID=07a703e4-173a-4e54-b425-baa69a220a64 rw
    INITRD ../initramfs-linux.img


LABEL Win7_64
    MENU LABEL Windows_10
    COM32 chain.c32
    APPEND guid=9292422592420E63

LABEL reboot
        MENU LABEL Reboot
        COM32 reboot.c32

LABEL poweroff
        MENU LABEL Poweroff
        COM32 poweroff.c32
