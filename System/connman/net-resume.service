[Unit]
Description=Restart connman on resume.
After=suspend.target

[Service]
Type=oneshot
RemainAfterExit=no
TimeoutSec=1
ExecStart=/usr/bin/systemctl restart wpa_supplicant
ExecStart=/usr/bin/systemctl restart connman
ExecStart=/usr/bin/echo connman-resume: Successfully restarted networking

[Install]
WantedBy=suspend.target
