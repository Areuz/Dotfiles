# Custom Variables #

set $mod  Mod1
set $Ws1  "1:"
set $Ws2  "2:"
set $Ws3  "3:"
set $Ws4  "4:"
set $Ws5  "5:"
set $Ws6  "6:"
set $Ws7  "7:"
set $Ws8  "8:"
set $Ws9  "9:"

workspace $Ws1 output DP-5
workspace $Ws2 output DP-3
workspace $Ws3 output DP-5
workspace $Ws4 output DP-3
workspace $Ws5 output DP-5
workspace $Ws6 output DP-3
workspace $Ws7 output DP-5
workspace $Ws8 output DP-3
workspace $Ws9 output DP-5

set $color-bg             #202327
set $color-bg-inactive    #141618
set $color-bg-urgent      #260A03
set $color-bg-contrast    #525356

set $color-fg             #BAF2F8
set $color-fg-inactive    #9EB8BB

set $color-br             #2c3035
set $color-br-inactive    #141618
set $color-br-urgent      #8c0000

set $color-ic             #606060

#i3-gaps
for_window [class="^.*"] border pixel 5;

gaps inner 20
gaps outer -5

smart_gaps on
smart_borders on

# Altered/Default Configuration #

font pango:Cantarell 8

floating_modifier $mod

bindsym $mod+Shift+q                kill

bindsym $mod+h                      split h
bindsym $mod+v                      split v

bindsym $mod+a                      focus parent
bindsym $mod+f                      fullscreen toggle
bindsym $mod+space	                floating toggle

bindsym $mod+j                      focus left
bindsym $mod+k                      focus down
bindsym $mod+l                      focus up
bindsym $mod+semicolon              focus right

bindsym $mod+Shift+j                move left
bindsym $mod+Shift+k                move down
bindsym $mod+Shift+l                move up
bindsym $mod+Shift+semicolon        move right

bindsym $mod+1                      workspace $Ws1
bindsym $mod+2                      workspace $Ws2
bindsym $mod+3                      workspace $Ws3
bindsym $mod+4                      workspace $Ws4
bindsym $mod+5                      workspace $Ws5
bindsym $mod+6                      workspace $Ws6
bindsym $mod+7                      workspace $Ws7
bindsym $mod+8                      workspace $Ws8
bindsym $mod+9                      workspace $Ws9

bindsym $mod+Shift+1                move container to workspace $Ws1; workspace $Ws1
bindsym $mod+Shift+2                move container to workspace $Ws2; workspace $Ws2
bindsym $mod+Shift+3                move container to workspace $Ws3; workspace $Ws3
bindsym $mod+Shift+4                move container to workspace $Ws4; workspace $Ws4
bindsym $mod+Shift+5                move container to workspace $Ws5; workspace $Ws5
bindsym $mod+Shift+6                move container to workspace $Ws6; workspace $Ws6
bindsym $mod+Shift+7                move container to workspace $Ws7; workspace $Ws7
bindsym $mod+Shift+8                move container to workspace $Ws8; workspace $Ws8
bindsym $mod+Shift+9                move container to workspace $Ws9; workspace $Ws9

bindsym $mod+Shift+r         	      restart

mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


# CUSTOM CONFIGURATION FROM HERE #

  #Control (Binds)
    bindsym $mod+Return  	                exec --no-startup-id urxvt;
    bindsym $mod+x        	              exec --no-startup-id /.config/i3/lock/lock.sh;
    bindsym F2            	              exec rofi -show "run" -config /.config/rofi/config.cfg -run-list-command ". /config/scripts/list_alias.sh" -run-command "/bin/bash -i -c '{cmd}'" &
    bindsym F3                            exec --no-startup-id /.config/Apps/adapter_menu.sh
    
    bindsym Mod4+s		                    exec --no-startup-id /.config/scripts/Keybinds/layout_toggle.sh;
    bindsym Mod4+Shift+s                  exec --no-startup-id /.config/scripts/Keybinds/layout_toggle.sh;

    bindsym $mod+Shift+e                  exec --no-startup-id /.config/Apps/power_menu.sh;
    bindsym XF86PowerOff                  exec --no-startup-id /.config/Apps/power_menu.sh;
    bindsym Print                         exec --no-startup-id /.config/Apps/scrcap.sh

    bindsym XF86AudioPlay	                exec --no-startup-id mpc toggle;
    bindsym XF86AudioStop                 exec --no-startup-id mpc stop;
    bindsym XF86AudioNext                 exec --no-startup-id mpc next;
    bindsym XF86AudioPrev                 exec --no-startup-id mpc prev;

    bindsym $mod+XF86AudioRaiseVolume     exec --no-startup-id mpvc volume +2;
    bindsym $mod+XF86AudioLowerVolume     exec --no-startup-id mpvc volume -2;
   
    bindsym XF86AudioRaiseVolume          exec --no-startup-id amixer set Master 2%+;
    bindsym XF86AudioLowerVolume          exec --no-startup-id amixer set Master 2%-;

    bindsym $mod+XF86AudioPlay	          exec --no-startup-id mpvc toggle;
    bindsym $mod+XF86AudioStop            exec --no-startup-id mpvc stop;
    bindsym $mod+XF86AudioNext            exec --no-startup-id mpvc next;
    bindsym $mod+XF86AudioPrev            exec --no-startup-id mpvc prev;

    bindsym XF86MonBrightnessUp           exec --no-startup-id /.config/scripts/backlight.sh 5;
    bindsym XF86MonBrightnessDown         exec --no-startup-id /.config/scripts/backlight.sh -5;

    bindsym $mod+Shift+f                  exec --no-startup-id /.config/scripts/scr_flip.sh;

    bindsym XF86AudioMute	                exec --no-startup-id /.config/scripts/Keybinds/mute_all_toggle.sh;

  #Visual (Aesthetics)
    #Global Colors            BORDER                  BACKGROUND                  TEXT                  INDICATOR
    client.focused            $color-br               $color-bg                   $color-fg          	  $color-ic
    client.unfocused          $color-br-inactive      $color-bg-inactive          $color-fg-inactive  	$color-ic
    client.focused_inactive   $color-br-inactive      $color-bg-inactive          $color-fg-inactive  	$color-ic
    client.urgent             $color-br-urgent        $color-bg-urgent            $color-fg           	$color-ic

    bar {
      tray_output DP-3
      status_command /.config/System/i3/bar/script.sh
      font pango:Cantarell 8

      colors {
        background  $color-bg
        statusline  $color-fg
        separator   $color-bg-contrast

        #                         BORDER                  BACKGROUND                  TEXT
        focused_workspace         $color-br-inactive      $color-bg-inactive          $color-fg
        inactive_workspace        $color-br               $color-bg                   $color-fg
        urgent_workspace          $color-br-urgent        $color-bg-urgent            $color-fg
      }

    }
    
    for_window [class="Xdialog"]                    floating enable;
    for_window [title="Keyboard"]                   floating enable, border pixel 0, resize set 3840 480, move absolute position 0 1680;
    for_window [title="Ranger_Browser"]             floating enable;
    for_window [title="QT5-Application-Debug"]      floating enable;
    for_window [class="Steam" title="^(?!Steam$)"]  floating enable;
    
  #Automatic Execution
   
    exec --no-startup-id          urxvt -title "_ncmpcpp" -bg [85]#0a0a0a -e ncmpcpp -c /.config/ncmpcpp/config;
    exec --no-startup-id          urxvt -tltle "_visualizer" -bg [85]#0a0a0a -e ncmpcpp -c /.config/ncmpcpp/vis_config;

    exec --no-startup-id          /.config/scripts/Watchdogs/net.sh;
    exec --no-startup-id          /.config/scripts/Watchdogs/gmail.sh;
    exec --no-startup-id          /.config/scripts/Watchdogs/mpc.sh;
    exec --no-startup-id          /.config/scripts/Watchdogs/mpvc.sh;
    exec --no-startup-id          /.config/scripts/Watchdogs/sshd.sh;
   
    exec --no-startup-id          devmon --no-gui;
    exec --no-startup-id          compton -b --conf /.config/compton/compton.conf;
    exec --no-startup-id          feh --bg-scale /.config/wallpaper/wallpaper.jpg;
    exec --no-startup-id          dunst -conf /.config/dunst/dunstrc;
    exec --no-startup-id          mpd /.config/mpd/mpd.conf;
    exec --no-startup-id          deluge;

    exec --no-startup-id          for f in /.config/System/on_boot/*.sh; do "$f"; done;
